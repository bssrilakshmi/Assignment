<apex:page standardController="Opportunity" extensions="CaptureAnswers" showHeader="false" sidebar="false">
	<apex:form >
		<apex:pageBlock title="Questions and Answers per Product" id="thePageBlock">
			<apex:pageBlockTable value="{!lstAnswersWrapper}" var="objlstAnswersWrapper">
				<apex:column headervalue="Product" value="{!objlstAnswersWrapper.productName}"/>
				<apex:column headervalue="Questions" value="{!objlstAnswersWrapper.question}"/>
				<apex:column headervalue="Answers" />
			</apex:pageBlockTable>
		</apex:pageBlock>
	</apex:form>
</apex:page>